{
  "name": "chinedu-screeps",
  "version": "3.0.0",
  "description": "",
  "main": "index.js",
  "//": "If you add or change the names of destinations in screeps.json, make sure you update these scripts to reflect the changes",
  "scripts": {
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "build": "rollup -c",
    "push-main": "rollup -c && node tools/deploy.js main",
    "push-pserver": "rollup -c && node tools/deploy.js pserver",
    "push-localhost": "rollup -c && node tools/deploy.js localhost",
    "push-sim": "rollup -c && node tools/deploy.js sim",
    "test": "npm run test-unit",
    "test-unit": "set TS_NODE_PROJECT=tsconfig.test.json&& mocha --require ts-node/register \"src/**/*.test.ts\"",
    "test-integration": "echo 'See docs/in-depth/testing.md for instructions on enabling integration tests'",
    "watch-main": "rollup -cw",
    "watch-pserver": "rollup -cw",
    "watch-sim": "rollup -cw"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChineduOzodi/screeps-ai"
  },
  "author": "",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/ChineduOzodi/screeps-ai/issues"
  },
  "homepage": "https://github.com/ChineduOzodi/screeps-ai#readme",
  "engines": {
    "node": "10.x || 12.x || 20.x"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/chai": "^4.3.16",
    "@types/lodash": "^4.17.6",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "@types/screeps": "^3.3.8",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@typescript-eslint/typescript-estree": "^7.15.0",
    "chai": "^4.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "lodash": "^4.17.21",
    "mocha": "^10.6.0",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-typescript2": "^0.36.0",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.54.0"
